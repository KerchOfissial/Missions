try:
    while True:
        inp = input("Введите имя: ")
        inp2 = int(input("Введите возраст: "))

        if len(inp) >= 10:
            print("Слишком большая длина имени")
            continue
        if inp.islower():
            print("Имя не с большой буквы")
            continue
        if inp2 <10 or inp2 >= 100:
            print("Неправильный возраст")
            continue
        break
except:
    print("Ошибка в проверке")
finally:
    print("Программа закончила работу")
